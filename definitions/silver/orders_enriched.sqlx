config {
  type: "table",
  schema: "silver"
}

select
  o.order_id,
  o.customer_id,
  c.full_name,
  p.product_name,
  o.amount,
  o.order_date
from ${ref("orders_raw")} o
left join ${ref("customers_cleaned")} c on o.customer_id = c.customer_id
left join ${ref("products_raw")} p on o.product_id = p.product_id;

